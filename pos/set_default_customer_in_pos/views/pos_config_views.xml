<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_form_view_inherit_for_customer" model="ir.ui.view">
        <field name="name">pos.config.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting id="default_pos_partner_id_settings"
                         string="Set POS Default Customer"
                         help="The selected customer is set as the default in the POS.">

                    <field name="default_pos_partner_id"/>

                </setting>

            </xpath>
        </field>
    </record>


</odoo>
